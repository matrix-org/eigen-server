{
  "compilerOptions": {
    "target": "ES5",
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build",
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
